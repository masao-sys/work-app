.wrap
  = render 'commons/profile_image', user: current_user
  .main
    .container
      - if can? :read, @information
        .pageTitleBtn
        = link_to informations_path do
          %h2 全体連絡
          .create
            = link_to new_information_path do
              .create_button
                %p ＋全体連絡作成
      - else
        .pageTitle
          = link_to informations_path do
            %h2 全体連絡
      - @informations.each do |information|
        = render 'commons/informations', information: information

= javascript_pack_tag 'bookmark_index'
